post_install() {
	vlicense License.txt
	cd ../"$pkgname-bin-$version"
	mkdir -p tmp
	echo accepted > tmp/eula_accepted
	make DESTDIR=$DESTDIR install
	vlicense src/eula_en_linux.txt
}
